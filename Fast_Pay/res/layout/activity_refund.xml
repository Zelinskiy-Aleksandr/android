<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:tools="http://schemas.android.com/tools"
 android:layout_width="match_parent"
 android:layout_height="match_parent"
  android:background="#faeedd"
 android:paddingBottom="@dimen/activity_vertical_margin"
 android:paddingLeft="@dimen/activity_horizontal_margin"
 android:paddingRight="@dimen/activity_horizontal_margin"
 android:paddingTop="@dimen/activity_vertical_margin"
 tools:context=".MainActivity"
 android:orientation="vertical" 
 >
<RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="bottom"
               android:layout_weight="1">

 <LinearLayout
 android:id="@+id/enteramount"
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:layout_centerVertical="true"
 android:layout_centerHorizontal="true"
 >   
    
 <TextView
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:text="@string/amount"
 android:layout_marginRight="10dp"
 android:id="@+id/amountlabel"
 android:textAppearance="@style/labelstyle"

 />
 <EditText
 android:layout_height="wrap_content"
 android:layout_width="wrap_content"
 android:ems="6"
 android:maxEms="6"
 android:maxLength="10"
 android:gravity="right|center_vertical" 
 android:lines="1"
 android:ellipsize="end"
 android:inputType="numberDecimal"
 android:id="@+id/amount"
 android:text="0.00"
 android:cursorVisible="false"
 android:focusableInTouchMode="false"
 />

 <TextView
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:text="@string/currency"
 android:id="@+id/currency"
 android:textAppearance="@style/labelstyle"
  android:layout_marginLeft="10dp"
 />
 </LinearLayout>
 
 <TextView
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
 android:text="@string/refund"
 android:layout_centerHorizontal="true"
 android:textAppearance="@style/headerstyle"
 android:layout_marginBottom="20dp"
 android:layout_above="@id/enteramount"
 />
 
 </RelativeLayout>

    
    
 <TableLayout
        android:id="@+id/tableId"
        android:layout_margin="@dimen/padding_small"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"

     >
        
  <TableRow>
            <Button
                android:id="@+id/btnNum1Id"
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonheight"
                android:layout_weight="1" 
                android:layout_margin="5dp"
               
              />
            <Button
                android:id="@+id/btnNum2Id"
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonheight"
                android:layout_weight="1" 
                android:layout_margin="5dp"

              />
            <Button
                android:id="@+id/btnNum3Id"
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonheight"
                android:layout_weight="1" 
      
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btnNum4Id"
                android:layout_width="0dp"
               android:layout_height="@dimen/buttonheight"
                android:layout_weight="1"
                android:text="4"
      
                 android:layout_margin="5dp"
                /> 
        </TableRow>
    <TableRow>
            <Button
                android:id="@+id/btnNum5Id"
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonheight"
                android:layout_weight="1" 
 
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/btnNum6Id"
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonheight"
                android:layout_weight="1"
    
                android:layout_margin="5dp"
              />
            <Button
                android:id="@+id/btnNum7Id"
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonheight"
                android:layout_weight="1" 

                android:layout_margin="5dp"
               />
            <Button
                android:id="@+id/btnNum8Id"
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonheight"
                android:layout_weight="1"

                android:layout_margin="5dp"
                
             />
        </TableRow>
    <TableRow>
            <Button
                android:id="@+id/btnNum9Id"
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonheight"
                android:layout_weight="1"

                android:layout_margin="5dp"
              />
            <Button
                android:id="@+id/btnNum0Id"
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonheight"
                android:layout_weight="1" 

                android:layout_margin="5dp"
               />
            <Button
                android:id="@+id/btnBackspaceId"
                android:text="â†"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonheight"
                android:layout_weight="1"

                android:layout_margin="5dp"
             />
            <Button
                android:id="@+id/btnPayId"
                android:text="OK"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonheight"
                android:layout_weight="1"

                android:layout_margin="5dp"
             />

        </TableRow>                           
 </TableLayout>       
    

    
 



 
 

</LinearLayout>